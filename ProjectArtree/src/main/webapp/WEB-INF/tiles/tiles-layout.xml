<?xml version="1.0" encoding="UTF-8"?>

<!-- ======= tiles 레이아웃 설정하기 ======= -->

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions> 

	<definition name="tiles-Basiclayout" template="/WEB-INF/tiles/layout/tiles-Basiclayout.jsp"> 
		<put-attribute name="header" value="/WEB-INF/tiles/mainTiles/header.jsp" />
		<put-attribute name="content" value="" /> <!--  content는 페이지마다 바뀌므로 value는 그때그때 지정한다. -->
		<put-attribute name="sideinfo" value="/WEB-INF/tiles/mainTiles/sideinfo.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/mainTiles/footer.jsp" />
	</definition>
	
	<definition name="*.tiles" extends="tiles-Basiclayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp"/> <!--  여기서 {1}은 *.tiles1 에서 *에 해당-->
	</definition>
	<definition name="*/*.tiles" extends="tiles-Basiclayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	<definition name="*/*/*.tiles" extends="tiles-Basiclayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>

</tiles-definitions>       